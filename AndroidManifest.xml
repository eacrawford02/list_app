<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eacra.list_v2.list_v2">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".TaskAlarmReceiver" android:exported="true">
            <!-- intent filters are not required because the intent is delivered directly to the receiver class (explicit intent). An intent filter WOULD be required for implicit intents -->
        </receiver>
        <receiver android:name=".DoneNotificationReceiver" android:exported="true">
            <!-- intent filters are not required because the intent is delivered directly to the receiver class (explicit intent). An intent filter WOULD be required for implicit intents -->
        </receiver>
        <receiver android:name=".DeleteNotificationReceiver" android:exported="true">
            <!-- intent filters are not required because the intent is delivered directly to the receiver class (explicit intent). An intent filter WOULD be required for implicit intents -->
        </receiver>
        <receiver android:name=".ResetAlarmReceiver" android:exported="true">
            <!-- intent filters are not required because the intent is delivered directly to the receiver class (explicit intent). An intent filter WOULD be required for implicit intents -->
        </receiver>
        <receiver android:name=".BootReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>
    </application>

</manifest>